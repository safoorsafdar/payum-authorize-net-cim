{
  "name": "safoorsafdar/payum-authorize-net-cim",
  "type": "library",
  "description": "The Payum extension. It provides Authorize.Net CIM payment integration.",
  "keywords": [
    "payment",
    "authorize.net",
    "authorize net"
  ],
  "homepage": "https://github.com/safoorsafdar/payum-authorize-net-cim",
  "license": "MIT",
  "authors": [
    {
      "name": "SafoorSafdar",
      "email": "safoor.safdar@gmail.com",
      "homepage": "https://github.com/safoorsafdar",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "~5.6|~7.0",
    "payum/core": "~1.0",
    "authorizenet/authorizenet": "~1.8"
  },
  "require-dev": {
    "payum/core": "~1.0@dev",
    "phpunit/phpunit": "~4.0",
    "symfony/phpunit-bridge": "~2.8|~3.0",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "SafoorSafdar\\AuthorizeNet\\Cim": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SafoorSafdar\\AuthorizeNet\\Cim": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
